decl

integer factorial(integer n,a,s);

enddecl

integer factorial (integer n,a,s) {
decl

integer rvalue;

enddecl

begin

if (n==1) then

rvalue = 1;

else
rvalue = n * n-1 ;

endif;

return rvalue;	 // Note only one RETURN statement is allowed.

end

}

integer main( ){ // Main definition should always begin like this

decl

integer n,i ;

enddecl

begin

read (n);

i = 1;

while ( i <= n) do
i = i + 1;
write ( factorial(2,3,4));

endwhile;

return 1;	 // Any integer value may be returned

end
}
